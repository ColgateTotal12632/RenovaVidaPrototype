<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RenovaVida</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RenovaVida.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .footer {
            background: #212529;
            border-top: 2px solid #1967FF;
            margin-top: 48px;
            box-shadow: 0 -2px 16px rgba(25,103,255,0.08);
        }
        .footer .container {
            padding-top: 0px;
            padding-bottom: 0px;
        }
        .footer-spacer {
            height: 120px;
        }
        .footer a {
            transition: color 0.2s;
        }
        .footer a:hover {
            color: #0d6efd !important;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RenovaVida</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer-spacer"></div>
    <footer class="footer text-white text-center py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 mb-3 mb-md-0 text-md-start">
                    <strong>Contato:</strong><br>
                    <a href="mailto:contato@renovavida.com" class="text-white text-decoration-none d-block mb-1">
                        <i class="bi bi-envelope-fill me-2"></i>contato@renovavida.com
                    </a>
                    <a href="tel:+5511999999999" class="text-white text-decoration-none d-block">
                        <i class="bi bi-telephone-fill me-2"></i>(14) 99999-9999
                    </a>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <strong>Siga nas redes sociais:</strong><br>
                    <a href="https://facebook.com/renovavida" class="text-white me-3" target="_blank" rel="noopener" aria-label="Facebook">
                        <i class="bi bi-facebook fs-4"></i>
                    </a>
                    <a href="https://instagram.com/renovavida" class="text-white me-3" target="_blank" rel="noopener" aria-label="Instagram">
                        <i class="bi bi-instagram fs-4"></i>
                    </a>
                    <a href="https://wa.me/5514999999999" class="text-white me-3" target="_blank" rel="noopener" aria-label="WhatsApp">
                        <i class="bi bi-whatsapp fs-4"></i>
                    </a>
                </div>
                <div class="col-md-4 text-md-end">
                    <p class="mb-0 small">&copy; @DateTime.Now.Year Renova Vida - Todos os direitos reservados.</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
