<script>
    const filtro = document.getElementById('cidadeFiltro');
    const todasEscolas = Array.from(document.querySelectorAll('.escola-card'));
    let escolaIndex = 0;

    function mostrarEscolas() {
        const escolasVisiveis = todasEscolas.filter(card => {
            return filtro.value === 'todas' || card.dataset.cidade === filtro.value;
        });

        const mostrar = escolasVisiveis.slice(escolaIndex, escolaIndex + 3);
        mostrar.forEach(card => card.style.display = 'block');

        escolaIndex += 3;

        const verMaisBtn = document.getElementById('verMaisBtn');
        verMaisBtn.style.display = escolasVisiveis.length > escolaIndex ? 'inline-block' : 'none';
    }

    window.addEventListener('load', () => {
        mostrarEscolas();
    });

    document.getElementById('verMaisBtn').addEventListener('click', mostrarEscolas);

    filtro.addEventListener('change', () => {
        todasEscolas.forEach(card => card.style.display = 'none');
        escolaIndex = 0;
        mostrarEscolas();
    });

</script>



