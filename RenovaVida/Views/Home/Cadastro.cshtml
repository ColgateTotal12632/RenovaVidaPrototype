<section class="login-section d-flex align-items-center justify-content-center">
    <div class="login-card shadow">
        <h2 class="text-center mb-4">Cadastre-se</h2>

        <form>
            <div class="mb-3">
                <label for="nome" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="nome" placeholder="Seu nome completo">
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" class="form-control" id="email" placeholder="seuemail@email.com">
            </div>

            <div class="mb-3">
                <label for="senha" class="form-label">Senha</label>
                <input type="password" class="form-control" id="senha" placeholder="********">
            </div>

            <div class="mb-3">
                <label for="confirmarSenha" class="form-label">Confirmar Senha</label>
                <input type="password" class="form-control" id="confirmarSenha" placeholder="********">
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="termos">
                <label class="form-check-label" for="termos">
                    Aceito os <a href="#" class="text-decoration-none">termos e condições</a>
                </label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
        </form>

        <p class="text-center mt-4 small">
            Já tem conta? <a asp-controller="Home" asp-action="Login" class="cadastro-link">Entrar</a>
        </p>
    </div>
</section>

<style>
    .login-section {
        min-height: 100vh;
        background: linear-gradient(135deg, #f4f8ff, #ffffff);
        padding: 20px;
    }

    .login-card {
        background: #fff;
        border-radius: 12px;
        padding: 2.5rem;
        width: 100%;
        max-width: 400px;
        animation: fadeInUp 0.6s ease;
    }

        .login-card h2 {
            font-weight: 700;
            color: #1967FF;
        }

        .login-card .form-control {
            border-radius: 8px;
            border: 1px solid #d6e0f5;
            padding: 10px;
            transition: 0.3s;
        }

            .login-card .form-control:focus {
                border-color: #1967FF;
                box-shadow: 0 0 0 0.2rem rgba(25, 103, 255, 0.25);
            }

        .login-card .cadastro-link {
            font-weight: 600;
            color: #1967FF;
            text-decoration: none;
        }

            .login-card .cadastro-link:hover {
                text-decoration: underline;
            }

        .login-card .btn-primary {
            background: #1967FF;
            border: none;
            border-radius: 8px;
            padding: 10px;
            font-weight: 600;
            transition: 0.3s;
        }

            .login-card .btn-primary:hover {
                background: #0d55d8;
                transform: translateY(-2px);
            }

    .navbar {
        background: rgba(0, 0, 0, 0.6) !important;
        backdrop-filter: blur(8px);
        padding: 15px 0;
    }

    .navbar-nav .nav-item {
        display: flex;
    }

    .navbar-brand {
        font-weight: 700;
        font-size: 1.5rem;
        background: #0d6efd;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .navbar-nav .nav-link {
        color: #fff !important;
        margin: 0 0.9rem;
        font-weight: 500;
        font-size: 0.95rem;
        padding: 0;
        position: relative;
        transition: color 0.3s ease;
    }

    .nav-link::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        width: 0%;
        height: 2px;
        background: #0d6efd;
        transition: width 0.3s ease;
    }

    .nav-link:hover {
        color: #0d6efd !important;
    }

        .nav-link:hover::after {
            width: 100%;
        }

    html {
        scroll-behavior: smooth;
    }
</style>
